{% extends 'base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class='w-96 mx-auto mt-20'>
		<form method="post">
			{% if error %}
				<div class="bg-red-700 rounded-md text-white text-center mb-2 p-2">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			{% endif %}

			{% if app.user %}
				<div class="mb-3 text-white">
					You are logged in as
					{{ app.user.userIdentifier }},
					<a href="{{ path('app_logout') }}">Logout</a>
				</div>
			{% endif %}

			<h1 class="mb-3 text-white font-bold text-center text-xl">Please Login</h1>
			<div class='flex flex-col mb-4'>
				<label class=' mb-1 inline-block text-gray-100' for="inputEmail">Email</label>

				<input class='p-2 rounded-md' type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
			</div>

			<div class='flex flex-col'>
				<label class='mb-1 inline-block text-gray-100' for="inputPassword">Password</label>
				<input class='p-2 rounded-md' type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
			</div>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

			<button class="w-full mt-8 text-white rounded-md p-3 bg-secondary" type="submit">
				Login
			</button>
		</form>
	</div>

{% endblock %}
